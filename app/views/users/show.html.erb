<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<%= render 'books/list', book: @book, user: @user%>

<h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(40,40) %></td>
        <td><%= link_to book.title, book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>