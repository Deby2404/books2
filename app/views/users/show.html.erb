<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'books/list', book: @new_book, user: @user%>
    <div class="col-lg-8">
      <div>
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
                <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @user.get_profile_image(40,40) %></td>
                <td><%= link_to book.title, book_path(@user) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

