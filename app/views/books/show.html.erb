<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
 <div class="row">
  <%= render 'list', book: @new_book, user: @user %>

  <div  class="col-lg-8">
   <div>
   <h2>Book detail</h2>
    <table class="table table-striped">
     <tbody>
      <tr>
        <td>
        <%= link_to user_path(@user) do %>
         <%= image_tag @user.get_profile_image(40,40) %>
         <%= @user.name %>
        <% end %></td>

        <td><%= link_to @book.title, book_path %></td>
        <td><%= @book.title %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success' %></td>
        <td>
        <%= link_to 'Destroy', book_path(@book), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
        </td>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>

