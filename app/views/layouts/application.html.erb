<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://your-site-or-cdn.com/fontawesome/v5.15.4/js/all.js" data-auto-a11y="true" ></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3 text-white" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>

            <li>
              <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
              <i class="fas fa-home nav-link text-light"></i> Home
              <% end %>
            </li>
            <li>
              <%= link_to users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-users nav-link text-light"></i> Users
              <% end %>
            </li>
            <li>
              <%= link_to books_path, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open nav-link text-light"></i> Books
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt nav-link text-light"></i> Log out
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-home nav-link text-light"></i> Home
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: 'nav-link text-light' do %>
              <i class="fas fa-link nav-link text-light"></i> About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus nav-link text-light"></i> Sign up
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt nav-link text-light"></i> Log in
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
     <% flash.each do |key, value| %>
   ã€€ <%= content_tag(:div, value, class: "#{key}") %>
     <% end %>
     <%= yield %>
    </main>
   </div>
    <footer class="text-black pt-5 pb-4">
      <div class="container-fluid">
        <div class="row text-center">
          <div class="col-lg-12">
            <p>CopyRight Infratop.inc</p>
          </div>
          </div>
        </div>
    </footer>
  </body>
</html>








