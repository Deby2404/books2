<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
   <div class="container">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">Bookers</span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
              <i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-house-chimney"></i><%= link_to 'Home', root_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-users"></i><%= link_to 'Users', users_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-book-open-cover"></i><%= link_to 'Books', books_path, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li>
              <i class="fa-solid fa-house-chimney"></i><%= link_to 'Home', root_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-link"></i><%= link_to 'About', about_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <i class="fa-solid fa-right-to-bracket"></i><%= link_to "Log in", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
   </div>
    <%= yield %>
    <footer class="text-black pt-5 pb-4">
      <div class="container-fluid">
        <div class="row text-center">
          <div class="col-lg-12">
            <p>CopyRight Infratop.inc</p>
          </div>
          <div class="col-md-8">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>








